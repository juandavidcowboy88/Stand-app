<h1>General#index</h1>
<p>Find me in app/views/general/index.html.erb</p>
<div class="container col-md-12">

  <div class="container col-md-8">
  <%= month_calendar  events: @events   do |date,events| %>
         <%= date.day%>

    <% events.each do |event| %>
       <div>
         <%= event.name_evet %>
        <p>hora del Evento  <%= event.date_event.hour%></p>
             <%= event.place_event %>
       </div>
     <% end %>

  <% end %>
</div>

<div class="container">
    <div class="row">
      <% @events.each do |event| %>
        <div class="card" style="width: 15rem;">
            <img class="card-img-top" src="<%= event.linktographicpiece_event %>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= event.name_evet%></h5>
              <h5><%= event.place_event %></td></h5>
              <p class="card-text">date:<%= event.date_event %></p>
              <p> Facebook : <%= event.participants_event %></td>
              <p> Instagram : <%= event.artistcreator %></td>
          </div>
        </div>
      <% end %>
    </div>
    <!-- <div class="row"><h1>preguntas</h1>
      <%if artist_signed_in? %>
      <p>  <h1><%=  current_artist.id %></h1></p>
      <%end%>
    </div> -->
    <div class="row">
      <% @artists.each do |artist| %>
        <div class="card" style="width: 15rem;">
            <img class="card-img-top" src="<%= artist.linkgeneralphoto_artist %>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= artist.name_artist%></h5>
              <h5><%= artist.rol_artist %></td></h5>
              <p class="card-text">Biografia :<%= artist.biopic_artist %></p>
              <p> Facebook : <%= artist.facebookuser_artist %></td>
              <p> Instagram : <%= artist.instagramuser_artist %></td>
              <p>  rol: <%= artist.role %>  </p>
                <!-- si esta registrado puede editar - show edit destroy -->
                <% if artist_signed_in?  %>
                  <div class="btn btn-outline-primary btn-sm">
                    <td><%= link_to 'Show', artist %></td>
                  </div>
                  <div class="btn btn-outline-primary btn-sm">
                    <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
                  </div>
                  <div class="btn btn-outline-primary btn-sm">
                    <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </div>
                    <% end %>
          </div>
        </div>
      <% end %>
    </div>


</div>
