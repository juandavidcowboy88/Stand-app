<% if artist_signed_in? %>
  <div> show content here </div>
      <h1>artists / index artists </h1>
      <!-- Button trigger modal -->
              <div class="btn btn-outline-primary btn-sm">
              <%= link_to 'New artist ', new_artist_path %>
              </div>
      <div class="row">
        <% @artists.each do |artist| %>
          <div class="card" style="width: 15rem;">
              <img class="card-img-top" src="<%= artist.linkgeneralphoto_artist %>" alt="Card image cap">
              <div class="card-body">
                    <h5 class="card-title"><%= artist.name_artist%></h5>
                    <h5><%= artist.rol_artist %></td></h5>
                    <p class="card-text">Biografia :<%= artist.biopic_artist %></p>
                    <p> Facebook : <%= artist.facebookuser_artist %></td>
                    <p> Instagram : <%= artist.instagramuser_artist %></td>
                    <p>  rol: <%= artist.role %>  </p>
              <!-- si esta registrado puede editar - show edit destroy -->
                  <% if current_artist.id == artist.id  %>
                  <div class="btn btn-outline-primary btn-sm">
                  <td><%= link_to 'Show', artist %></td>
                  </div>
                  <div class="btn btn-outline-primary btn-sm">
                  <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
                  </div>
                  <div class="btn btn-outline-primary btn-sm">
                  <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </div>
                      <% if current_artist.standupproductor? %>
                      <div class="btn btn-outline-primary btn-sm">
                      <td><%= link_to 'new event', new_event_path %></td>
                      </div>
                      <% else %>
                      <% end %>
                  <% end %>
                </div>
          </div>
        <% end %>
      </div>
<%else %>
  <p> profavor  logeate o inscribete para ver este contenido</p>
  <h2><%= link_to "Sign up", new_artist_registration_path%>
<% end %>
